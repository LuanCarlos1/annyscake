<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaAdmin">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="br.com.example.annyscake.ui.pedidocliente.pedidoCliente"
        tools:layout="@layout/activity_tela_admin" />

    <LinearLayout
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10sp"
        android:paddingTop="15sp"
        android:paddingEnd="20sp"
        android:paddingBottom="15sp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/pedidoLayout"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/iconPedido"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:src="@drawable/icon_bolo" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusLayout"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/iconStatus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:src="@drawable/time_fill" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/historicoLayout"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/iconHistorico"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:src="@drawable/file_paper_2_fill" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/perfilLayout"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/iconPerfil"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:src="@drawable/user_fill" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>