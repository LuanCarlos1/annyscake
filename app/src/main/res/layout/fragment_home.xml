<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:padding="0dp"
    tools:context=".ui.home.HomeFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="179dp"
        android:layout_height="139dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/logoapp"
        android:scaleType="centerInside"
        android:src="@drawable/logoannyscake"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="311dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtNomeCliente"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/nome_do_cliente1"
                android:inputType="text"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/txtTelefone"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/telefone"
                android:inputType="phone"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/txtEndereco"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/endereco"
                android:inputType="text"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/txtDataEntrega"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/data_de_entrega1"
                android:inputType="datetime"
                android:textColorHint="@color/black" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnProx"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/proximaPag"
        android:layout_marginHorizontal="250dp">

    </Button>


</LinearLayout>